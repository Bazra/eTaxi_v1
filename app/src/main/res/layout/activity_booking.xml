<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/tvDriverLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:background="@drawable/black_button"
        android:padding="15dp"
        android:text="BOOKING ACTIVITY"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btDestination"
        style="@style/button_style_yellow"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btNearbyDriver"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="Destination"
        android:textColor="@color/colorBlackFade"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btNearbyDriver"
        style="@style/button_style_black"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btReviewBooking"
        android:layout_alignLeft="@+id/btDestination"
        android:layout_alignStart="@+id/btDestination"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="Near By Driver"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btReviewBooking"
        style="@style/button_style_green"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btBookTaxi"
        android:layout_alignLeft="@+id/btNearbyDriver"
        android:layout_alignStart="@+id/btNearbyDriver"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="78dp"
        android:padding="15dp"
        android:text="Review Booking and Price"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <!--<Switch-->
        <!--android:id="@+id/swShareable"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_marginLeft="250dp"-->
        <!--android:text="Shareable "-->
        <!--android:textColor="@color/colorWhite"-->
        <!--android:textStyle="bold"/>-->

    <Button
        android:id="@+id/btBookTaxi"
        style="@style/button_style_red"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="146dp"
        android:padding="20dp"
        android:text="Confirm Booking"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold" />



</RelativeLayout>