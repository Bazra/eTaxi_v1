<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/tvDriverLogin"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:padding="18dp"
        android:text="BOOKING ACTIVITY"
        android:background="@drawable/black_button"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btDestination"
        style="@style/button_style_yellow"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btNearbyDriver"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Destination"
        android:textColor="@color/colorBlackFade"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btNearbyDriver"
        style="@style/button_style_black"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btReviewBooking"
        android:layout_alignLeft="@+id/btDestination"
        android:layout_alignStart="@+id/btDestination"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="14dp"
        android:text="Near By Driver"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btReviewBooking"
        style="@style/button_style_yellow"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btBookTaxi"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="79dp"
        android:padding="15dp"
        android:text="Review Booking and Price"
        android:textColor="@color/colorBlackFade"
        android:textSize="20sp" />

    <!--<Switch-->
        <!--android:id="@+id/swShareable"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_marginLeft="250dp"-->
        <!--android:text="Shareable "-->
        <!--android:textColor="@color/colorWhite"-->
        <!--android:textStyle="bold"/>-->

    <Button
        android:id="@+id/btBookTaxi"
        style="@style/button_style_black"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="118dp"
        android:padding="20dp"
        android:text="Confirm Booking"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />



</RelativeLayout>