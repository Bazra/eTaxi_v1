<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:paddingRight="16dp"
    android:background="@color/colorBackground"
    android:weightSum="100">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/yellow_button"
        android:text="REVIEW BOOKING"
        android:padding="15dp"
        android:textColor="@color/colorBlackFade"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="2dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tvFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From :"
                android:textColor="@color/colorBlackFade"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To :"
                android:textColor="@color/colorBlackFade"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance :"
                android:textColor="@color/colorBlackFade"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration :"
                android:textColor="@color/colorBlackFade"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="2dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tvPassFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlackFade"
                android:textSize="20sp"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tvPassTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlackFade"
                android:textSize="20sp"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tvPassDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlackFade"
                android:textSize="20sp"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tvPassTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlackFade"
                android:textSize="20sp"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btCalcAmount"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            style="@style/button_style_black"
            android:text="Calculate Amount"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.5"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_button"
            android:text=""
            android:padding="16dp"
            android:layout_weight="0.5"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlackFade"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btDone"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        style="@style/button_style_black"
        android:text="Done"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimary"/>
</LinearLayout>